<UserControl x:Class="Fcog.Controls.Wpf.Recognition.DataStatisticsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fcog.Controls.Wpf.Recognition"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="This">
    <Grid>
     <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*"/>
         <ColumnDefinition Width="*"/>
     </Grid.ColumnDefinitions>
        
        <GroupBox Name="GroupBoxTrainSet" Header="Train DataSet" Grid.Column="0">
            <local:DataSetControl x:Name="DataSetControlTrain" DataSet="{Binding ElementName=This,Path=DataSets.TrainDataSet}"></local:DataSetControl>
        </GroupBox>

        <GroupBox Name="GroupBoxTestSet" Header="Test DataSet" Grid.Column="1">
            <local:DataSetControl x:Name="DataSetControlTest" DataSet="{Binding ElementName=This,Path=DataSets.TestDataSet}"></local:DataSetControl>
        </GroupBox>
    </Grid>
</UserControl>
